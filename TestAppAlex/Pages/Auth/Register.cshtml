@page "/Auth/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-container">
    <h2>Create Your CloudSync Account</h2>
    <form method="post">
        <input asp-for="Input.Name" placeholder="Name" />
        <input asp-for="Input.Email" placeholder="Email" />
        <input asp-for="Input.Password" type="password" placeholder="Password" />
        <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm Password" />
        <button type="submit">Register</button>
        <p>Already have an account? <a href="/Auth/Login">Login here</a></p>
    </form>

    @if (Model.ErrorMessage != null)
    {
    <p style="color:red">@Model.ErrorMessage</p>
    }
</div>

<style>
    .auth-container {
        width: 350px;
        margin: 80px auto;
        padding: 30px;
        background: white;
        border-radius: 12px;
        box-shadow: 0px 0px 15px rgba(0, 120, 255, 0.2);
        text-align: center;
    }

        .auth-container h2 {
            color: #0078ff;
        }

        .auth-container input {
            width: 100%;
            margin: 10px 0;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        .auth-container button {
            width: 100%;
            padding: 12px;
            margin-top: 15px;
            background-color: #0078ff;
            border: none;
            color: white;
            border-radius: 8px;
            cursor: pointer;
        }

            .auth-container button:hover {
                background-color: #005bb5;
            }

        .auth-container a {
            color: #0078ff;
        }
</style>
